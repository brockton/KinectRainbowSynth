<Window x:Class="KinectWpfSynth.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kinect Synth" Height="688" Width="1500" FontStyle="Italic"
        Loaded="Window_Loaded" Closed="Window_Closed" Closing="Window_Closing">
    <Grid>
        <Canvas Margin="12" Name="playfield" SizeChanged="Playfield_SizeChanged" Panel.ZIndex="1" Opacity="1"></Canvas>
        <Label Name="banner" VerticalAlignment="Top" Opacity="1" Height="77" FontSize="30" HorizontalContentAlignment="Left"  />
        <Image Name="video" Opacity="0.4" Margin="0,0,0,544" HorizontalAlignment="Left" Width="167" VerticalAlignment="Top" />
    </Grid>
</Window>
